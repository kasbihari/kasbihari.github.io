---
import './HeroSection.css';
---

<section id="hero" class="hero-section">
  <div class="hero-container">
    <h1 class="hero-name">Krishna Bihari</h1>
    <p class="hero-quote">Blending Code, Art & Culture</p>
    <p class="hero-subtitle">Full-Stack Developer, Graphic Designer</p>
    
    <div class="hero-actions">
      <a href="#projects" class="hero-button primary">View My Work</a>
      <a href="#contact" class="hero-button secondary">Get In Touch</a>
    </div>
  </div>
  
  <div class="scroll-indicator">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
