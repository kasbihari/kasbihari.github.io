---
// src/components/astro/Footer.astro
import { Github, Linkedin, Mail, Heart, ChevronUp } from 'lucide-react';
---

<footer class="w-full border-t border-white/10 bg-gradient-to-t from-black/30 via-transparent to-transparent backdrop-blur-sm">
  <div class="max-w-6xl mx-auto px-6 py-12">
    
    <!-- Logo & Name Center -->
    <div class="flex flex-col items-center justify-center mb-10">
      <div class="flex items-center gap-4 mb-6">
        <!-- Logo Icon -->
        <h3 class="font-amsterdam text-4xl text-white tracking-wider">Krishna Bihari</h3>
      </div>
      
      <!-- Minimalist Tagline -->
      <p class="text-white/70 font-playfair italic text-center text-lg max-w-md mb-8">
        Blending <span class="text-accent-2 font-semibold">Code</span> & <span class="text-accent font-semibold">Art</span>
      </p>
    </div>
    
    <!-- Social Links - Clean Row -->
    <div class="flex justify-center items-center gap-8 mb-10">
      <a
        href="https://github.com/kasbihari"
        target="_blank"
        rel="noopener noreferrer"
        class="group relative p-3"
        aria-label="GitHub"
      >
        <div class="absolute inset-0 bg-gradient-to-br from-accent/10 to-accent-2/10 rounded-full blur-sm group-hover:blur-md transition-all duration-500"></div>
        <Github size={22} class="relative text-white/80 group-hover:text-white transition-colors duration-300" />
      </a>
      
      <a
        href="https://linkedin.com/in/krishna-bihari"
        target="_blank"
        rel="noopener noreferrer"
        class="group relative p-3"
        aria-label="LinkedIn"
      >
        <div class="absolute inset-0 bg-gradient-to-br from-accent/10 to-accent-2/10 rounded-full blur-sm group-hover:blur-md transition-all duration-500"></div>
        <Linkedin size={22} class="relative text-white/80 group-hover:text-white transition-colors duration-300" />
      </a>
      
      <a
        href="mailto:hello@krishnabihari.com"
        class="group relative p-3"
        aria-label="Email"
      >
        <div class="absolute inset-0 bg-gradient-to-br from-accent/10 to-accent-2/10 rounded-full blur-sm group-hover:blur-md transition-all duration-500"></div>
        <Mail size={22} class="relative text-white/80 group-hover:text-white transition-colors duration-300" />
      </a>
    </div>
    
    <!-- Minimal Divider -->
    <div class="h-px w-48 mx-auto bg-gradient-to-r from-transparent via-white/20 to-transparent mb-10"></div>
    
    <!-- Bottom Bar - Super Clean -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-6 text-white/50 text-sm">
      <div class="text-center md:text-left order-2 md:order-1">
        <p class="flex items-center justify-center md:justify-start gap-1">
          Â© {new Date().getFullYear()} Krishna Bihari
          <Heart size={12} class="text-accent mx-1" />
          All rights reserved
        </p>
      </div>
      
      <!-- Back to Top - Elegant -->
      <button
        onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
        class="group flex items-center gap-2 order-1 md:order-2 hover:text-white transition-colors duration-300"
        aria-label="Back to top"
      >
        <span class="text-xs tracking-wider">BACK TO TOP</span>
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-br from-accent/20 to-accent-2/20 rounded-full blur-sm group-hover:blur-md transition-all duration-500"></div>
          <ChevronUp size={16} class="relative group-hover:-translate-y-0.5 transition-transform duration-300" />
        </div>
      </button>
    </div>
  </div>
</footer>

<style is:global>
  /* Subtle hover effects */
  footer a {
    position: relative;
    overflow: hidden;
  }
  
  footer a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--accent-2), transparent);
    transition: all 0.3s var(--easing);
    transform: translateX(-50%);
  }
  
  footer a:hover::after {
    width: 100%;
  }
</style>
