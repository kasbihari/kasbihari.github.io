---
// src/components/astro/Footer.astro
import { Github, Linkedin, Mail, FileText, Heart } from 'lucide-react';
---

<footer class="site-footer">
  <div class="footer-container">
    <!-- Left Column: Quote & Copyright -->
    <div class="footer-content">
      <h3>Krishna Bihari</h3>
      <p class="footer-quote">
        "Creating digital experiences that blend technical precision with artistic vision."
      </p>
      <p class="footer-copyright">
        © {new Date().getFullYear()} Krishna Bihari. All rights reserved.<br />
        Built with <Heart size={12} style={{ display: 'inline', verticalAlign: 'middle' }} />
        using <a href="https://astro.build" target="_blank">Astro</a>, 
        <a href="https://react.dev" target="_blank">React</a>, and 
        <a href="https://tailwindcss.com" target="_blank">Tailwind CSS</a>.
      </p>
    </div>

    <!-- Right Column: Links & Social -->
    <div class="footer-links">
      <div>
        <h4>Navigation</h4>
        <nav class="footer-nav">
          <a href="#about">About</a>
          <a href="#skills">Skills</a>
          <a href="#projects">Projects</a>
          <a href="#contact">Contact</a>
        </nav>
      </div>

      <div>
        <h4>Connect</h4>
        <div class="footer-social">
          <a 
            href="https://github.com/kasbihari" 
            target="_blank" 
            rel="noopener noreferrer"
            aria-label="GitHub"
            class="footer-social-link"
          >
            <Github size={18} />
          </a>
          <a 
            href="https://linkedin.com/in/krishna-bihari" 
            target="_blank" 
            rel="noopener noreferrer"
            aria-label="LinkedIn"
            class="footer-social-link"
          >
            <Linkedin size={18} />
          </a>
          <a 
            href="mailto:hello@krishnabihari.com" 
            aria-label="Email"
            class="footer-social-link"
          >
            <Mail size={18} />
          </a>
          <a 
            href="/cv.pdf" 
            target="_blank"
            aria-label="CV"
            class="footer-social-link"
          >
            <FileText size={18} />
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <p>
      Fonts: Amsterdam Four (custom) • Playfair Display • Inter
    </p>
  </div>
</footer>

<style>
  /* Footer Styles */
  .site-footer {
    background: linear-gradient(
      to top,
      rgba(10, 5, 6, 0.95) 0%,
      rgba(26, 10, 15, 0.9) 100%
    );
    backdrop-filter: blur(10px);
    border-top: 1px solid rgba(180, 28, 59, 0.2);
    color: var(--ink-2);
    padding: 3rem 1.5rem 2rem;
    margin-top: auto;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  @media (min-width: 768px) {
    .footer-container {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }
  }

  .footer-content {
    max-width: 300px;
  }

  .footer-content h3 {
    font-family: var(--font-amsterdam);
    font-size: 2rem;
    color: var(--ink);
    margin-bottom: 0.5rem;
    font-weight: normal;
  }

  .footer-quote {
    font-family: var(--font-serif);
    font-style: italic;
    color: var(--ink-3);
    font-size: 1rem;
    margin-bottom: 1rem;
  }

  .footer-copyright {
    font-size: 0.875rem;
    color: var(--ink-3);
    line-height: 1.5;
  }

  .footer-copyright a {
    color: var(--accent-3);
    text-decoration: none;
    transition: color var(--speed-1) var(--easing);
  }

  .footer-copyright a:hover {
    color: var(--ink);
  }

  .footer-links {
    display: flex;
    gap: 3rem;
  }

  .footer-links h4 {
    font-family: var(--font-display);
    font-size: 1.125rem;
    color: var(--ink);
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-nav a {
    color: var(--ink-2);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color var(--speed-1) var(--easing);
  }

  .footer-nav a:hover {
    color: var(--accent-3);
  }

  .footer-social {
    display: flex;
    gap: 1rem;
  }

  .footer-social-link {
    color: var(--ink-2);
    transition: color var(--speed-1) var(--easing);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
  }

  .footer-social-link:hover {
    color: var(--ink);
    background: rgba(180, 28, 59, 0.2);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    padding-top: 1.5rem;
    margin-top: 2rem;
    text-align: center;
    font-size: 0.75rem;
    color: var(--ink-3);
    opacity: 0.7;
  }
</style>
