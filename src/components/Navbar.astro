---
const navItems = ['Hero', 'About', 'Projects', 'Contact'];
---
<nav class="fixed top-8 left-8 z-50 flex flex-col items-start space-y-3">
  {
    navItems.map((item) => (
      <a
        href={`#${item.toLowerCase()}`}
        class="font-body text-xl uppercase tracking-widest text-white/60 hover:text-bordeaux transition-all duration-300 glass px-4 py-2 rounded-lg"
        data-nav-item
      >
        {item}
      </a>
    ))
  }
</nav>